{
  "fields": {
    "name": {
      "type": "varchar",
      "required": true,
      "trim": true,
      "isMultilang": true
    },
    "description": {
      "type": "text",
      "rows": 4,
      "lengthOfCut": 400,
      "isMultilang": true
    },
    "code": {
      "type": "varchar",
      "layoutMassUpdateDisabled": true,
      "required": true,
      "trim": true,
      "emHidden": true,
      "view": "pim:views/fields/code-from-name"
    },
    "isActive": {
      "notNull": true,
      "type": "bool"
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "modifiedBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "ownerUser": {
      "type": "link",
      "required": true,
      "view": "views/fields/owner-user"
    },
    "assignedUser": {
      "type": "link",
      "required": true,
      "view": "views/fields/assigned-user"
    },
    "teams": {
      "type": "linkMultiple",
      "view": "views/fields/teams"
    },
    "categoryParent": {
      "type": "link",
      "view": "pim:views/category/fields/category-parent"
    },
    "categoryRoute": {
      "type": "text",
      "layoutListDisabled": true,
      "layoutDetailDisabled": true,
      "layoutDetailSmallDisabled": true,
      "layoutMassUpdateDisabled": true,
      "layoutFiltersDisabled": true
    },
    "categoryRouteName": {
      "type": "text",
      "layoutDetailDisabled": true,
      "layoutDetailSmallDisabled": true,
      "layoutMassUpdateDisabled": true,
      "layoutFiltersDisabled": true
    },
    "categories": {
      "type": "linkMultiple",
      "layoutDetailDisabled": true,
      "layoutListDisabled": true,
      "layoutMassUpdateDisabled": true,
      "layoutFiltersDisabled": true,
      "noLoad": true,
      "importDisabled": true
    },
    "products": {
      "type": "linkMultiple",
      "layoutDetailDisabled": true,
      "layoutListDisabled": true,
      "layoutMassUpdateDisabled": true,
      "layoutFiltersDisabled": true,
      "importDisabled": true,
      "noLoad": true
    },
    "catalogs": {
      "type": "linkMultiple",
      "layoutDetailDisabled": true,
      "layoutListDisabled": true,
      "layoutMassUpdateDisabled": true,
      "importDisabled": true,
      "noLoad": true
    },
    "image": {
      "layoutFiltersDisabled": true,
      "notStorable": true,
      "type": "base",
      "previewSize": "medium",
      "readOnly": true,
      "importDisabled": true,
      "view": "pim:views/category/fields/image"
    },
    "images": {
      "type": "linkMultiple",
      "layoutDetailDisabled": true,
      "layoutListDisabled": true,
      "layoutMassUpdateDisabled": true,
      "importDisabled": true,
      "noLoad": true
    },
    "scope": {
      "type": "enum",
      "notStorable": true,
      "options": [
        "Global",
        "Channel"
      ],
      "default": "Global",
      "layoutListDisabled": true,
      "layoutDetailDisabled": true,
      "layoutMassUpdateDisabled": true,
      "layoutFiltersDisabled": true
    },
    "hasChildren": {
      "type": "bool",
      "notStorable": true,
      "default": false,
      "layoutListDisabled": true,
      "layoutListSmallDisabled": true,
      "layoutDetailDisabled": true,
      "layoutDetailSmallDisabled": true,
      "layoutMassUpdateDisabled": true,
      "layoutFiltersDisabled": true
    }
  },
  "links": {
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "modifiedBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "ownerUser": {
      "type": "belongsTo",
      "entity": "User"
    },
    "assignedUser": {
      "type": "belongsTo",
      "entity": "User"
    },
    "teams": {
      "type": "hasMany",
      "entity": "Team",
      "relationName": "EntityTeam",
      "layoutRelationshipsDisabled": true
    },
    "categoryParent": {
      "type": "belongsTo",
      "foreign": "categories",
      "entity": "Category"
    },
    "categories": {
      "type": "hasMany",
      "foreign": "categoryParent",
      "layoutRelationshipsDisabled": true,
      "entity": "Category",
      "disableMassRelation": true
    },
    "products": {
      "type": "hasMany",
      "relationName": "productCategoryLinker",
      "foreign": "categories",
      "entity": "Product"
    },
    "catalogs": {
      "type": "hasMany",
      "foreign": "category",
      "entity": "Catalog"
    },
    "images": {
      "type": "hasMany",
      "relationName": "categoryImageLinker",
      "foreign": "categories",
      "entity": "Image"
    }
  },
  "collection": {
    "sortBy": "createdAt",
    "asc": false,
    "textFilterFields": [
      "name"
    ]
  },
  "indexes": {
    "name": {
      "columns": [
        "deleted"
      ]
    },
    "ownerUser": {
      "columns": [
        "ownerUserId",
        "deleted"
      ]
    },
    "assignedUser": {
      "columns": [
        "assignedUserId",
        "deleted"
      ]
    }
  }
}
